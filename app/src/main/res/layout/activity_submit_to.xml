<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".submitTo">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:hint="Survey Name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/surveyname"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:background="#F7F7F7"
            android:clickable="false"
            android:ems="10"

            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Deadline"
        app:startIconDrawable="@drawable/ic_timer_black_24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#F7F7F7"

            android:ems="10"
            android:inputType="datetime" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="20dp"
        android:text="To"
        android:textColor="#3F51B5"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/rdgrp1"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"

        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/org"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:text="Organization" />

        <RadioButton
            android:id="@+id/dep"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:text="Department" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/rdgrp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"

        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/grp"

            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:text="Group" />

        <RadioButton
            android:id="@+id/indiv"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:text="Individual" />
    </RadioGroup>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:hint="Department ID">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/depname"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:background="#F7F7F7"
            android:clickable="false"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"

        android:layout_marginRight="10dp"
        android:hint="Group ID">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/grpno"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#F7F7F7"
            android:clickable="false"
            android:editable="false"
            android:ems="10"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"

        android:layout_marginRight="10dp"
        android:hint="User ID">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/user_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#F7F7F7"
            android:clickable="false"
            android:ems="10"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/finsbmt"
        android:layout_width="348dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/button2"
        android:onClick="goToHome"
        android:text="Submit Successfully"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>